# EduConnect AI Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Supabase Configuration
# =============================================================================
# Your Supabase project URL (found in Settings > API)
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key (found in Settings > API)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# OPTIONAL: Additional Supabase Configuration
# =============================================================================
# Service role key for server-side operations (be careful with this!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, staging, production)
VITE_APP_ENVIRONMENT=development

# API base URL (defaults to Supabase URL if not set)
# VITE_API_BASE_URL=https://api.your-domain.com

# Allowed origins for CORS (comma-separated)
# VITE_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable Google Analytics or other analytics services
VITE_ENABLE_ANALYTICS=false

# Enable error reporting (Sentry, LogRocket, etc.)
VITE_ENABLE_ERROR_REPORTING=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Enable WhatsApp integration features
VITE_WHATSAPP_ENABLED=true

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================
# Discord Bot Token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Bot Application ID (from Discord Developer Portal)
DISCORD_APPLICATION_ID=your_discord_application_id_here

# Discord Bot Public Key (from Discord Developer Portal)
DISCORD_PUBLIC_KEY=your_discord_public_key_here

# Discord Bot Server Port (default: 3001)
DISCORD_SERVER_PORT=3001

# OpenAI API Key for Discord responses (optional)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These variables are only used in development mode

# Enable detailed debugging
VITE_DEBUG_MODE=true

# Show performance metrics in console
VITE_SHOW_PERFORMANCE_METRICS=true

# =============================================================================
# AI CONFIGURATION (OpenRouter)
# =============================================================================
# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Default chat and embedding models via OpenRouter
# Recomendado: DeepSeek com modo online para web search
AI_MODEL=deepseek/deepseek-chat
EMBEDDING_MODEL=mistral/mistral-embed

# =============================================================================
# WHATSAPP BUSINESS API CONFIGURATION
# =============================================================================
# Get these from Meta Developers Console (developers.facebook.com)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_TOKEN=your_webhook_verify_token_here

# Optional: Strict CORS for webhook and allowed origins (comma-separated)
WHATSAPP_CORS_STRICT=false
WHATSAPP_ALLOWED_ORIGINS=https://connectai.pt,https://admin.connectai.pt

# Optional: Vision model used when processing images via WhatsApp
WHATSAPP_VISION_MODEL=qwen/qwen3-vl-235b-a22b-instruct

# =============================================================================
# OPTIONAL: IMAGE GENERATION APIs
# =============================================================================
# OpenAI API for DALL-E image generation
OPENAI_API_KEY=your_openai_api_key_here

# Stability AI for Stable Diffusion
STABILITY_API_KEY=your_stability_ai_key_here

# ðŸŽ¨ IMAGE GENERATION APIs (Professional Educational Images)
# Leonardo.AI - 150 images/day FREE (Premium quality for education)
LEONARDO_API_KEY=your_leonardo_api_key_here
VITE_LEONARDO_API_KEY=your_leonardo_api_key_here

# Ideogram.ai - 25 images/day FREE (Excellent for diagrams with text)
IDEOGRAM_API_KEY=your_ideogram_api_key_here  
VITE_IDEOGRAM_API_KEY=your_ideogram_api_key_here

# OpenAI DALL-E 3 - Premium paid option (~â‚¬0.04/image)
OPENAI_API_KEY=your_openai_api_key_here

# Stability AI - Professional paid option (~â‚¬0.02/image)
STABILITY_API_KEY=your_stability_api_key_here

# (Deprecated) SambaNova variables were removed; use OpenRouter.

# Optional: model for WhatsApp media selection (OpenRouter style, e.g. deepseek/deepseek-chat)
MEDIA_AI_MODEL=deepseek/deepseek-chat

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================
# For production deployments, also configure:

# 1. Domain and SSL certificate
# 2. CDN configuration for static assets
# 3. Database connection pooling
# 4. Monitoring and alerting
# 5. Backup and disaster recovery

# Example production configuration:
# VITE_APP_ENVIRONMENT=production
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_ENABLE_PERFORMANCE_MONITORING=true
# VITE_ALLOWED_ORIGINS=https://yourdomain.com

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use different keys for development and production
# 3. Regularly rotate your API keys
# 4. Monitor your Supabase usage and set up billing alerts
# 5. Enable Row Level Security (RLS) on all Supabase tables
# 6. Use the service role key only for server-side operations