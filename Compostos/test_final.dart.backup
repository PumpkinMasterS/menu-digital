import 'package:dio/dio.dart';

void main() async {
  print('ğŸš€ Teste final - RequisiÃ§Ã£o bÃ¡sica com Dio');
  
  final dio = Dio(BaseOptions(
    baseUrl: 'http://localhost:5000',
    connectTimeout: const Duration(seconds: 10),
    receiveTimeout: const Duration(seconds: 10),
  ));
  
  // Adicionar interceptor simples para debug
  dio.interceptors.add(InterceptorsWrapper(
    onRequest: (options, handler) {
      print('ğŸ“¤ Request: \${options.method} \${options.path}');
      print('ğŸ“¤ Headers: \${options.headers}');
      return handler.next(options);
    },
    onResponse: (response, handler) {
      print('ğŸ“¥ Response: \${response.statusCode}');
      print('ğŸ“¥ Data type: \${response.data.runtimeType}');
      return handler.next(response);
    },
    onError: (error, handler) {
      print('âŒ Error: \${error.type}');
      print('âŒ Status: \${error.response?.statusCode}');
      print('âŒ Message: \${error.message}');
      return handler.next(error);
    },
  ));
  
  try {
    print('ğŸ”§ Fazendo requisiÃ§Ã£o POST...');
    
    final response = await dio.post(
      '/api/auth/login',
      data: {
        'email': 'test@example.com',
        'password': '123456',
      },
      options: Options(
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
        },
      ),
    );
    
    print('âœ… Sucesso!');
    print('Status: \${response.statusCode}');
    print('Data: \${response.data}');
    
    // Verificar estrutura da resposta
    if (response.data is Map) {
      final data = response.data as Map;
      if (data['success'] == true) {
        print('ğŸ‰ Resposta contÃ©m success: true');
        final userData = data['data']['user'];
        final token = data['data']['token'];
        print('ğŸ‘¤ UsuÃ¡rio: \${userData['email']}');
        print('ğŸ”‘ Token: \$token');
      }
    }
    
  } catch (e) {
    print('ğŸ’¥ Erro:');
    print('Tipo: \${e.runtimeType}');
    print('Mensagem: \${e.toString()}');
    
    if (e is DioException) {
      print('ğŸ“Š DioException details:');
      print('Type: \${e.type}');
      print('Status: \${e.response?.statusCode}');
      print('Data: \${e.response?.data}');
      print('Headers: \${e.response?.headers}');
    }
  }
}