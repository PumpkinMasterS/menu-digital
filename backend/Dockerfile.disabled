# Minimal Dockerfile for backend on Railway
FROM node:20-alpine

# Create app directory
WORKDIR /app

# Install dependencies first (uses npm ci)
COPY package*.json ./
RUN npm ci --include=dev

# Copy source and public assets
COPY tsconfig.json ./
COPY src ./src
COPY public ./public
COPY products.json ./
COPY categories.json ./

# Build TypeScript
RUN npm run build

# Runtime env
ENV NODE_ENV=production
# Railway provides PORT
EXPOSE 3000

# Start the server
CMD ["node", "dist/index.js"]